<% if register %>
  <% form.fields_for :company_attributes, @user.company do |company_form|%>
    <%= company_form.label :name %><br/>
    <%= company_form.text_field :name %><br/>
    <%= company_form.label :login, "Company Login" %><br/>
    <%= company_form.text_field :login %><br/>
  <% end %>
<% end %>
<%= form.label :first_name %><br />
<%= form.text_field :first_name %><br />
<%= form.label :last_name %><br />
<%= form.text_field :last_name %><br />
<%= form.label :login %><br />
<%= form.text_field :login %><br />
<%= form.label :email %><br />
<%= form.text_field :email %><br />
