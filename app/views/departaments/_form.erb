<%= render :partial => 'shared/notice' %>
<div class="app-form">
  <% form_for [@area, @departament] do |f| %>
    <%= f.error_messages %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <%= f.submit "Add" %> | <%= link_to 'Cancel', collection_path(@departament) %>
  <% end %>
</div>