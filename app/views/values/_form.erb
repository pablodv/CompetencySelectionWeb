<div class="app-form">
  <% form_for @value do |f| %>
    <%= f.error_messages %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <%= f.submit "Add" %> | <%= link_to 'Cancel', values_path %>
  <% end %>
</div>

