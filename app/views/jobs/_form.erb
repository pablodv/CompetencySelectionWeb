<%= render :partial => 'shared/notice' %>
<div class="app-form">
  <% form_for [@user, @job] do |f| %>
    <%= f.error_messages %>
    <div class="field">
      <%= f.label :company %>
      <%= f.text_field :company %>
    </div>
    <div class="field">
      <%= f.label :employment %>
      <%= f.text_field :employment %>
    </div>
    <div class="field">
      <%= f.label :date_from %>
      <%= f.date_select :date_from%>
    </div>
    <div class="field">
      <%= f.label :date_until %>
      <%= f.date_select :date_until %>
    </div>
    <%= f.submit "Add" %> | <%= link_to 'Cancel', collection_path(@user) %>
  <% end %>
</div>
